<!DOCTYPE html>
<html ng-app="offerend">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Bootstrap",
    "~/Content/Css/Layout",
    "~/Content/Css/Themes")
    @Scripts.Render("~/bundles/modernizr",
    "~/bundles/Angular",
    "~/bundles/Default",
    "~/bundles/LoginRegisterController")
    @{ var bla = User.Identity.Name.ToString();}
</head>
<body>
    <div></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <input class="navbar-check" type="checkbox" name="navbarCheck" id="navbarCheck" />
        <label for="navbarCheck" class="navbar-check-label offerend-menu"></label>
        <div class="offerend-navbar">
            <ul class="list-unstyled">
                <li><span class="offerend-home"></span><a href="">Home</a></li>
                <li><span class="offerend-question"></span><a href="">How to</a></li>
                <li><span class="offerend-location"></span><a href="">Explorer offices</a></li>
                <li><span class="offerend-office"></span><a href="">My offices</a></li>
            </ul>
        </div>

        <input class="login-check" type="checkbox" name="navbarCheck" id="loginCheck" />
        <label for="loginCheck" class="navbar-login-label pull-right offerend-user"></label>
        <div class="offerend-login" ng-controller="LoginRegisterController as $ctrl">
            <div ng-show="form == 1">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @action = default(string), @class = "clearfix", @name = "offerendLoginForm", @id = "offerendLoginForm", @ng_submit = "mailForm.submit($event)", @role = "form", @novalidate = default(string) }))
            {
                    <p>Log in to your account</p>
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.Label("userName", "Name")
                            <input class="form-control" type="text" name="userName" />
                        </div>
                        <div class="form-group">
                            @Html.Label("password", "Password")
                            <input class="form-control" type="password" name="password" />
                        </div>
                        <div class="form-group">
                            @Html.Label("confirmPassword", "Confirm Password")
                            <input class="form-control" type="password" name="confirmPassword" />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary" type="submit" name="login">Log in</button>
                        </div>
                        <div class="form-group">
                            <a ng-click="form = 2" href="">Create an Offerend account</a>
                        </div>
                    </div>
                }
            </div>

            <div ng-show="form == 2">
                @*@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "clearfix", @name = "offerendRegisterForm", @id = "offerendRegisterForm", @ng_submit = "createAccount()", @role = "form", @novalidate = default(string) }))*@

                <form method="post" name="offerendRegisterForm" id="offerendRegisterForm" role="form" ng-submit="createAccount()">
                    <p>Create an account</p>
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.Label("userName", "Name")
                            <input ng-model="createAccount.username" class="form-control" type="text" ng-required="true" ng-minlength="3" name="userName" />
                        </div>
                        <div class="form-group">
                            @Html.Label("password", "Password")
                            <input ng-model="createAccount.password" class="form-control" type="password" name="password" ng-required="true" ng-minlength="5" />
                        </div>
                        <div class="form-group">
                            @Html.Label("confirmPassword", "Confirm Password")
                            <input ng-model="createAccount.repeatPassword" class="form-control" type="password" name="confirmPassword" ng-required="true" ng-minlength="5" ng-match="createAccount.password" />
                            <span ng-show="createAccount.password != createAccount.repeatPassword">Passwords don't match!!</span>
                        </div>
                        <div>{{validationMessage}}</div>
                        <div class="form-group">
                            @Html.Label("email", "E-mail")
                            <input ng-model="createAccount.email" class="form-control" type="email" name="email" />
                        </div>
                        <div class="form-group">
                            @Html.Label("confirmEmail", "confirm E-mail")
                            <input ng-model="createAccount.repeatEmail" class="form-control" type="email" name="confirmEmail" />
                        </div>
                        <div class="form-group">
                            <input class="btn btn-lg btn-primary" type="submit" ng-click="$ctrl.open()" ng-disabled="offerendRegisterForm.$invalid" value="Sign up" name="signup" />
                        </div>
                        <div class="form-group">
                            <a ng-click="form = 1" href="">Back to log in</a>
                        </div>
                    </div>
                </form>
            </div>
            <div>
                <script type="text/ng-template" id="myModalContent.html">
                    <div class="modal-header">
                        <h3 class="modal-title" id="modal-title">Account successfully created</h3>
                    </div>
                    <div class="modal-body" id="modal-body">
                        <h2>Thank you for registering a Offerend account!</h2>

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" type="button" ng-click="$ctrl.ok()">OK</button>
                        <button class="btn btn-danger" type="button" ng-click="$ctrl.cancel()">Cancel</button>
                    </div>
                </script>
                <button ng-click="$ctrl.open()">test</button>
                <div>{{username}}</div>
            </div>
        </div>

        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Offerend", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @*<div class="hej">@bla</div>*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
